{
  "name": "spirituality-platform",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:prod": "astro build --config astro.config.production.mjs",
    "build:analyze": "npm run build:prod && tsx src/scripts/analyzeBuild.ts",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "test:load": "artillery run tests/load/artillery-config.yml",
    "security:scan": "tsx src/scripts/securityScan.ts",
    "security:scan:save": "tsx src/scripts/securityScan.ts --save-report",
    "security:scan:ci": "tsx src/scripts/securityScan.ts --fail-on critical,high --save-report",
    "security:owasp": "tsx src/scripts/owaspAudit.ts --save-report",
    "security:owasp:verbose": "tsx src/scripts/owaspAudit.ts --save-report --verbose",
    "accessibility:audit": "tsx src/scripts/wcagAudit.ts --save-report",
    "accessibility:audit:verbose": "tsx src/scripts/wcagAudit.ts --save-report --verbose",
    "backup": "tsx src/scripts/backup.ts create",
    "backup:list": "tsx src/scripts/backup.ts list",
    "backup:cleanup": "tsx src/scripts/backup.ts cleanup",
    "backup:stats": "tsx src/scripts/backup.ts stats",
    "staging:init": "tsx src/scripts/staging-setup.ts init",
    "staging:seed": "tsx src/scripts/staging-setup.ts seed",
    "staging:reset": "tsx src/scripts/staging-setup.ts reset",
    "staging:check": "tsx src/scripts/staging-setup.ts check",
    "staging:health": "tsx src/scripts/staging-health.ts",
    "staging:health:watch": "tsx src/scripts/staging-health.ts --watch",
    "staging:deploy": "tsx src/scripts/staging-deploy.ts deploy",
    "staging:status": "tsx src/scripts/staging-deploy.ts status",
    "staging:logs": "tsx src/scripts/staging-deploy.ts logs",
    "uat:init": "tsx src/scripts/uat.ts init",
    "uat:run": "tsx src/scripts/uat.ts run",
    "uat:report": "tsx src/scripts/uat.ts report",
    "uat:status": "tsx src/scripts/uat.ts status",
    "deploy:validate": "tsx src/scripts/deploy-validate.ts",
    "deploy:validate:quick": "tsx src/scripts/deploy-validate.ts --quick",
    "deploy:validate:report": "tsx src/scripts/deploy-validate.ts --report",
    "db:setup": "node scripts/setup-database.cjs",
    "db:setup:http": "node scripts/setup-database-http.mjs",
    "db:test": "node -e \"require('pg').Pool && console.log('pg module OK')\""
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/cloudflare": "^12.6.10",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/node": "^9.0.2",
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/s3-request-presigner": "^3.922.0",
    "@neondatabase/serverless": "^1.0.2",
    "@sendgrid/mail": "^8.1.4",
    "@sentry/astro": "^10.23.0",
    "@sentry/node": "^10.23.0",
    "@stripe/stripe-js": "^8.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@upstash/redis": "^1.35.8",
    "astro": "^5.15.3",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "cookie": "^1.0.2",
    "node-html-parser": "^7.0.1",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "redis": "^4.7.0",
    "resend": "^6.4.0",
    "stripe": "^17.7.0",
    "tailwindcss": "^3.4.1",
    "twilio": "^5.10.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie": "^0.6.0",
    "@types/js-yaml": "^4.0.9",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-v8": "^4.0.6",
    "artillery": "^2.0.26",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.11",
    "eslint": "^9.16.0",
    "eslint-plugin-astro": "^1.3.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.1.0",
    "module-alias": "^2.2.3",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.6"
  }
}
