---
/**
 * T051: User Dashboard Index Page
 * 
 * Dashboard homepage displaying:
 * - Welcome message
 * - Quick stats (enrolled courses, orders, downloads)
 * - Recently accessed courses
 * - Recent orders
 * - Quick action buttons
 */

import DashboardLayout from '@/layouts/DashboardLayout.astro';
import { getPool } from '@/lib/db';
import { getSessionFromRequest } from '@/lib/auth/session';
import ProgressBar from '@/components/progress/ProgressBar.astro';

export const prerender = false; // Enable SSR for authentication

// Check authentication
const session = await getSessionFromRequest(Astro.cookies);
if (!session) {
  return Astro.redirect('/login?redirect=/dashboard');
}

// Get user ID from session
const userId = session.userId;

// Fetch user's enrolled courses
const pool = getPool();
let enrolledCourses = [];
let recentOrders = [];
let stats = {
  totalCourses: 0,
  totalOrders: 0,
  totalSpent: 0,
  activeBookings: 0,
};

try {
  // Get enrolled courses
  const coursesResult = await pool.query(
    `SELECT c.id, c.title, c.slug, c.description, c.price, c.thumbnail_url,
            ce.enrolled_at, ce.progress, ce.completed
     FROM course_enrollments ce
     JOIN courses c ON ce.course_id = c.id
     WHERE ce.user_id = $1
     ORDER BY ce.enrolled_at DESC
     LIMIT 6`,
    [userId]
  );
  enrolledCourses = coursesResult.rows;

  // Get recent orders
  const ordersResult = await pool.query(
    `SELECT o.id, o.total_amount, o.status, o.created_at,
            COUNT(oi.id) as item_count
     FROM orders o
     LEFT JOIN order_items oi ON o.id = oi.order_id
     WHERE o.user_id = $1
     GROUP BY o.id
     ORDER BY o.created_at DESC
     LIMIT 5`,
    [userId]
  );
  recentOrders = ordersResult.rows;

  // Get stats
  const statsResult = await pool.query(
    `SELECT 
       (SELECT COUNT(*) FROM course_enrollments WHERE user_id = $1) as total_courses,
       (SELECT COUNT(*) FROM orders WHERE user_id = $1 AND status = 'completed') as total_orders,
       (SELECT COALESCE(SUM(total_amount), 0) FROM orders WHERE user_id = $1 AND status = 'completed') as total_spent,
       (SELECT COUNT(*) 
        FROM bookings b 
        JOIN events e ON b.event_id = e.id 
        WHERE b.user_id = $1 AND b.status = 'confirmed' AND e.event_date > CURRENT_DATE) as active_bookings`,
    [userId]
  );
  
  if (statsResult.rows.length > 0) {
    stats = {
      totalCourses: parseInt(statsResult.rows[0].total_courses || 0),
      totalOrders: parseInt(statsResult.rows[0].total_orders || 0),
      totalSpent: parseFloat(statsResult.rows[0].total_spent || 0),
      activeBookings: parseInt(statsResult.rows[0].active_bookings || 0),
    };
  }
} catch (error) {
  console.error('[DASHBOARD] Error fetching data:', error);
  // Continue with empty data - don't break the page
}

// Helper function to format date
function formatDate(date: string | Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// Helper function to get status badge color
function getStatusColor(status: string): string {
  switch (status) {
    case 'completed':
      return 'bg-success-light text-success';
    case 'pending':
      return 'bg-warning-light text-warning';
    case 'payment_failed':
      return 'bg-error-light text-error';
    case 'refunded':
      return 'bg-surface-dark text-text-light';
    default:
      return 'bg-surface-dark text-text-light';
  }
}
