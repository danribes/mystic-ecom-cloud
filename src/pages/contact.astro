---
/**
 * Contact Page
 *
 * Displays contact form and contact information.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { getTranslations } from '../i18n';

const locale = Astro.locals.locale || 'es';
const t = getTranslations(locale);
---

<BaseLayout title={t.contact.title} description={t.contact.description}>
  <div class="container py-2xl">
    <!-- Header -->
    <div class="mx-auto mb-2xl max-w-3xl text-center">
      <h1 class="mb-md text-4xl font-bold text-text">{t.contact.title}</h1>
      <p class="text-lg text-text-light">{t.contact.description}</p>
    </div>

    <div class="mx-auto max-w-5xl">
      <div class="grid gap-2xl lg:grid-cols-2">
        <!-- Contact Form -->
        <div class="rounded-2xl border border-border bg-surface p-xl">
          <h2 class="mb-lg text-xl font-semibold text-text">{t.contact.formTitle}</h2>
          <form id="contact-form" class="space-y-lg">
            <div>
              <label for="name" class="mb-sm block text-sm font-medium text-text">
                {t.contact.name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full rounded-lg border border-border bg-surface px-lg py-sm text-text placeholder:text-text-lighter focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
              />
            </div>

            <div>
              <label for="email" class="mb-sm block text-sm font-medium text-text">
                {t.contact.email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full rounded-lg border border-border bg-surface px-lg py-sm text-text placeholder:text-text-lighter focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
              />
            </div>

            <div>
              <label for="subject" class="mb-sm block text-sm font-medium text-text">
                {t.contact.subject}
              </label>
              <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full rounded-lg border border-border bg-surface px-lg py-sm text-text placeholder:text-text-lighter focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
              />
            </div>

            <div>
              <label for="message" class="mb-sm block text-sm font-medium text-text">
                {t.contact.message}
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full rounded-lg border border-border bg-surface px-lg py-sm text-text placeholder:text-text-lighter focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 resize-none"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full rounded-lg bg-primary px-lg py-md font-medium text-white transition-colors hover:bg-primary-hover disabled:opacity-50"
            >
              <span class="submit-text">{t.contact.send}</span>
              <span class="sending-text hidden">{t.contact.sending}</span>
            </button>

            <div id="form-message" class="hidden rounded-lg p-md text-center"></div>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-lg">
          <div class="rounded-2xl border border-border bg-surface p-xl">
            <h2 class="mb-lg text-xl font-semibold text-text">{t.contact.contactInfo}</h2>

            <div class="space-y-lg">
              <!-- Email -->
              <div class="flex items-start gap-md">
                <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-primary/10">
                  <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-text">{t.contact.emailLabel}</h3>
                  <a href="mailto:contact@mysticinternational.com" class="text-primary hover:underline">
                    contact@mysticinternational.com
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-md">
                <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-primary/10">
                  <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-text">{t.contact.phoneLabel}</h3>
                  <p class="text-text-light">+1 (555) 123-4567</p>
                </div>
              </div>

              <!-- Hours -->
              <div class="flex items-start gap-md">
                <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-primary/10">
                  <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-medium text-text">{t.contact.hoursLabel}</h3>
                  <p class="text-text-light">{t.contact.hours}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="rounded-2xl border border-border bg-surface p-xl">
            <h2 class="mb-lg text-xl font-semibold text-text">{t.contact.followUs}</h2>
            <div class="flex gap-md">
              <a href="https://facebook.com" class="flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-xl transition-colors hover:bg-primary hover:text-white">
                üìò
              </a>
              <a href="https://twitter.com" class="flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-xl transition-colors hover:bg-primary hover:text-white">
                üê¶
              </a>
              <a href="https://instagram.com" class="flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-xl transition-colors hover:bg-primary hover:text-white">
                üì∑
              </a>
              <a href="https://youtube.com" class="flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-xl transition-colors hover:bg-primary hover:text-white">
                üì∫
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script define:vars={{ successMessage: t.contact.successMessage, errorMessage: t.contact.errorMessage }}>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contact-form');
      const submitBtn = form?.querySelector('button[type="submit"]');
      const submitText = submitBtn?.querySelector('.submit-text');
      const sendingText = submitBtn?.querySelector('.sending-text');
      const formMessage = document.getElementById('form-message');

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Show loading state
        submitBtn?.setAttribute('disabled', 'true');
        submitText?.classList.add('hidden');
        sendingText?.classList.remove('hidden');
        formMessage?.classList.add('hidden');

        // Simulate form submission (replace with actual API call)
        await new Promise(resolve => setTimeout(resolve, 1500));

        // Show success message
        formMessage?.classList.remove('hidden', 'bg-red-50', 'text-red-700');
        formMessage?.classList.add('bg-green-50', 'text-green-700');
        if (formMessage) formMessage.textContent = successMessage;

        // Reset form
        form.reset();

        // Reset button
        submitBtn?.removeAttribute('disabled');
        submitText?.classList.remove('hidden');
        sendingText?.classList.add('hidden');
      });
    });
  </script>
</BaseLayout>
