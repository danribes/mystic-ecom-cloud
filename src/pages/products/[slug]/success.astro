---
/**
 * Purchase Success Page
 * Shown after successful product purchase from Stripe checkout
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { getProductBySlug, hasUserPurchasedProduct, generateDownloadLink } from '@/lib/products';
import { getSessionFromRequest } from '@/lib/auth/session';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/products');
}

const product = await getProductBySlug(slug);

if (!product) {
  return Astro.redirect('/404');
}

const session = await getSessionFromRequest(Astro.cookies);

if (!session) {
  return Astro.redirect(`/login?redirect=/products/${slug}/success`);
}

// Verify the user has purchased this product
const purchaseInfo = await hasUserPurchasedProduct(session.userId, product.id);

if (!purchaseInfo) {
  return Astro.redirect(`/products/${slug}`);
}

// Generate download link
const downloadLink = generateDownloadLink(
  product.id,
  purchaseInfo.order_id,
  session.userId
);

const downloadsRemaining = purchaseInfo.download_limit - purchaseInfo.download_count;
---

<BaseLayout title={`Success - ${product.title}`}>
  <div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <!-- Success Message -->
      <div class="bg-white rounded-lg shadow-lg p-8 mb-6">
        <div class="text-center">
          <!-- Success Icon -->
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-4">
            <svg class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>

          <!-- Title -->
          <h1 class="text-3xl font-bold text-gray-900 mb-2">
            Purchase Successful!
          </h1>

          <p class="text-lg text-gray-600 mb-6">
            Thank you for your purchase. Your download is ready.
          </p>

          <!-- Product Info -->
          <div class="border-t border-b border-gray-200 py-4 mb-6">
            <p class="text-sm text-gray-500 mb-1">You purchased:</p>
            <p class="text-xl font-semibold text-gray-900">{product.title}</p>
          </div>
        </div>

        <!-- Download Section -->
        <div class="bg-primary/5 rounded-lg p-6 mb-6">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-medium text-gray-900 mb-2">
                Your Download
              </h3>
              <p class="text-sm text-gray-600 mb-4">
                You have <span class="font-semibold text-primary">{downloadsRemaining}</span> download{downloadsRemaining !== 1 ? 's' : ''} remaining.
              </p>
              {downloadsRemaining > 0 ? (
                <a
                  href={downloadLink.url}
                  class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors"
                  data-download-button
                >
                  <svg class="mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
                  </svg>
                  Download Now
                </a>
              ) : (
                <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
                  <div class="flex">
                    <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <p class="ml-3 text-sm text-yellow-700">
                      You've reached your download limit for this product.
                    </p>
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>

        <!-- What's Next -->
        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">What's Next?</h3>
          
          <div class="space-y-3">
            <div class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <p class="text-sm text-gray-700">
                Your product has been added to your <a href="/dashboard/my-products" class="text-primary hover:text-primary-dark font-medium">My Products</a> page
              </p>
            </div>

            <div class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <p class="text-sm text-gray-700">
                You can re-download this product anytime before reaching your download limit
              </p>
            </div>

            <div class="flex items-start">
              <svg class="h-5 w-5 text-green-500 mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <p class="text-sm text-gray-700">
                A confirmation email has been sent to {session.email}
              </p>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 mt-8">
          <a
            href="/dashboard/my-products"
            class="flex-1 inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors"
          >
            View My Products
          </a>
          
          <a
            href="/products"
            class="flex-1 inline-flex items-center justify-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors"
          >
            Browse More Products
          </a>
        </div>
      </div>

      <!-- Order Receipt -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Order Details</h3>
        
        <div class="border-t border-gray-200 pt-4">
          <dl class="space-y-3">
            <div class="flex justify-between text-sm">
              <dt class="text-gray-600">Order ID:</dt>
              <dd class="font-medium text-gray-900 font-mono text-xs">{purchaseInfo.order_id}</dd>
            </div>
            
            <div class="flex justify-between text-sm">
              <dt class="text-gray-600">Purchase Date:</dt>
              <dd class="font-medium text-gray-900">
                {new Date(purchaseInfo.purchase_date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit'
                })}
              </dd>
            </div>
            
            <div class="flex justify-between text-sm">
              <dt class="text-gray-600">Product:</dt>
              <dd class="font-medium text-gray-900">{product.title}</dd>
            </div>
            
            <div class="flex justify-between text-sm">
              <dt class="text-gray-600">Amount Paid:</dt>
              <dd class="font-medium text-gray-900">${Number(product.price).toFixed(2)}</dd>
            </div>

            <div class="flex justify-between text-sm pt-3 border-t">
              <dt class="text-gray-600">Downloads:</dt>
              <dd class="font-medium text-gray-900">
                {purchaseInfo.download_count} of {purchaseInfo.download_limit} used
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Track download button click
  document.addEventListener('DOMContentLoaded', () => {
    const downloadButton = document.querySelector('[data-download-button]');
    
    if (downloadButton) {
      downloadButton.addEventListener('click', () => {
        // Show a brief success message
        const button = downloadButton as HTMLAnchorElement;
        const originalText = button.innerHTML;
        
        button.innerHTML = `
          <svg class="mr-2 h-5 w-5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          Preparing Download...
        `;
        
        // Reset button after download starts
        setTimeout(() => {
          button.innerHTML = originalText;
        }, 2000);
      });
    }
  });
</script>
