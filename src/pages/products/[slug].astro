const getTypeIcon = (type: string): string => {
  switch (type) {
    case 'pdf':
      return 'ðŸ“„';
    case 'audio':
      return 'ðŸŽµ';
    case 'video':
      return 'ðŸŽ¥';
    case 'ebook':
      return 'ðŸ“š';
    default:
      return 'ðŸ“¦';
  }
};

const pageTitle = `${product.title} - Digital Products`;
---

<BaseLayout title={pageTitle}>
  <main class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Back Button -->
      <div class="mb-6">
        <a
          href="/products"
          class="inline-flex items-center text-indigo-600 hover:text-indigo-800 font-medium"
        >
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Products
        </a>
      </div>

      <!-- Product Details -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-8">
          <!-- Product Image/Icon -->
          <div>
            {product.image_url ? (
              <img 
                src={product.image_url} 
                alt={product.title}
                class="w-full h-auto rounded-lg"
              />
            ) : (
              <div class="w-full aspect-square bg-gradient-to-br from-indigo-100 to-purple-100 rounded-lg flex items-center justify-center">
                <span class="text-9xl">{getTypeIcon(product.product_type)}</span>
              </div>
            )}

            <!-- Preview Link (if available) -->
            {product.preview_url && (
              <div class="mt-4">
                <a
                  href={product.preview_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full text-center px-4 py-2 border-2 border-indigo-600 text-indigo-600 font-medium rounded-md hover:bg-indigo-50 transition-colors"
                >
                  ðŸ“‹ Preview Sample
                </a>
              </div>
            )}
          </div>

          <!-- Product Info -->
          <div class="flex flex-col">
            <!-- Type Badge -->
            <div class="mb-4">
              <span class={`
                inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
                ${product.product_type === 'pdf' ? 'bg-red-100 text-red-800' : ''}
                ${product.product_type === 'audio' ? 'bg-blue-100 text-blue-800' : ''}
                ${product.product_type === 'video' ? 'bg-purple-100 text-purple-800' : ''}
                ${product.product_type === 'ebook' ? 'bg-green-100 text-green-800' : ''}
              `}>
                {getTypeIcon(product.product_type)} {product.product_type.toUpperCase()}
              </span>
            </div>

            <!-- Title -->
            <h1 class="text-3xl font-bold text-gray-900 mb-4">
              {product.title}
            </h1>

            <!-- Price -->
            <div class="text-4xl font-bold text-indigo-600 mb-6">
              ${Number(product.price).toFixed(2)}
            </div>

            <!-- Description -->
            <div class="prose prose-indigo mb-6">
              <p class="text-gray-700 text-lg">
                {product.description}
              </p>
            </div>

            <!-- Product Details -->
            <div class="bg-gray-50 rounded-lg p-4 mb-6">
              <h3 class="font-semibold text-gray-900 mb-3">Product Details</h3>
              <dl class="space-y-2">
                <div class="flex justify-between">
                  <dt class="text-gray-600">File Size:</dt>
                  <dd class="font-medium text-gray-900">{formatFileSize(product.file_size_mb)}</dd>
                </div>
                <div class="flex justify-between">
                  <dt class="text-gray-600">Format:</dt>
                  <dd class="font-medium text-gray-900">{product.product_type.toUpperCase()}</dd>
                </div>
                <div class="flex justify-between">
                  <dt class="text-gray-600">Downloads Allowed:</dt>
                  <dd class="font-medium text-gray-900">{product.download_limit} downloads</dd>
                </div>
              </dl>
            </div>

            <!-- Action Button -->
            <div class="mt-auto">
              {purchaseInfo ? (
                <!-- Already Purchased - Show Download -->
                <div>
                  <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
                    <div class="flex items-center">
                      <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      <span class="font-medium text-green-900">You own this product</span>
                    </div>
                    <p class="text-sm text-green-700 mt-1">
                      Downloads: {purchaseInfo.download_count} of {product.download_limit}
                    </p>
                  </div>

                  {downloadLink && purchaseInfo.download_count < product.download_limit ? (
                    <a
                      href={downloadLink.url}
                      class="block w-full text-center px-6 py-3 bg-indigo-600 text-white text-lg font-semibold rounded-md hover:bg-indigo-700 transition-colors"
                    >
                      ðŸ“¥ Download Now
                    </a>
                  ) : purchaseInfo.download_count >= product.download_limit ? (
                    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 text-center">
                      <p class="text-yellow-800 font-medium">Download limit reached</p>
                      <p class="text-sm text-yellow-700 mt-1">You have used all available downloads for this product</p>
                    </div>
                  ) : null}

                  <a
                    href="/dashboard/my-products"
                    class="block w-full text-center px-6 py-3 mt-3 border-2 border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50 transition-colors"
                  >
                    View in My Products
                  </a>
                </div>
              ) : (
                <!-- Not Purchased - Show Buy Button -->
                <div>
                  {session ? (
                    <button
                      type="button"
                      data-product-id={product.id}
                      data-product-price={product.price}
                      class="w-full px-6 py-3 bg-indigo-600 text-white text-lg font-semibold rounded-md hover:bg-indigo-700 transition-colors buy-now-btn"
                    >
                      ðŸ›’ Buy Now
                    </button>
                  ) : (
                    <a
                      href={`/login?redirect=/products/${product.slug}`}
                      class="block w-full text-center px-6 py-3 bg-indigo-600 text-white text-lg font-semibold rounded-md hover:bg-indigo-700 transition-colors"
                    >
                      ðŸ›’ Buy Now
                    </a>
                  )}

                  <p class="text-sm text-gray-500 text-center mt-3">
                    Instant download after purchase
                  </p>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>

      <!-- Additional Information -->
      <div class="mt-8 bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">What You'll Get</h2>
        <ul class="space-y-3">
          <li class="flex items-start">
            <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700">Instant access after purchase</span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700">Up to {product.download_limit} downloads</span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700">High-quality {product.product_type.toUpperCase()} file</span>
          </li>
          <li class="flex items-start">
            <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-gray-700">Lifetime access to purchased content</span>
          </li>
        </ul>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  // Handle Buy Now button click
  const buyNowButtons = document.querySelectorAll('.buy-now-btn');
  
  buyNowButtons.forEach(button => {
    button.addEventListener('click', async () => {
      const productId = button.getAttribute('data-product-id');
      const productPrice = button.getAttribute('data-product-price');
      
      if (!productId) return;
      
      try {
        // Create checkout session
        const response = await fetch('/api/checkout/create-session', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            items: [{
              type: 'digital_product',
              id: productId,
            }],
          }),
        });
        
        if (!response.ok) {
          throw new Error('Failed to create checkout session');
        }
        
        const data = await response.json();
        
        if (data.url) {
          // Redirect to Stripe Checkout
          window.location.href = data.url;
        } else {
          alert('Failed to initiate checkout. Please try again.');
        }
      } catch (error) {
        console.error('Checkout error:', error);
        alert('An error occurred. Please try again.');
      }
    });
  });
</script>
