---
/**
 * Product Detail Page
 * Displays full details of a digital product with purchase/download options
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { getProductBySlug, hasUserPurchasedProduct, generateDownloadLink } from '@/lib/products';
import { getSession } from '@/lib/auth/session';
import { trackProductView } from '@/lib/analytics';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/products');
}

// Fetch product
const product = await getProductBySlug(slug);

if (!product) {
  return Astro.redirect('/404');
}

// Check if user is logged in and has purchased
const sessionId = Astro.cookies.get('session')?.value;
const session = sessionId ? await getSession(sessionId) : null;
let purchaseInfo = null;
let downloadLink = null;

if (session && session.user) {
  purchaseInfo = await hasUserPurchasedProduct(session.user.id, product.id);
  if (purchaseInfo) {
    downloadLink = generateDownloadLink(product.id, purchaseInfo.order_id, session.user.id);
  }
}

// Track product view for analytics
if (session?.user) {
  const ipAddress = Astro.clientAddress || '0.0.0.0';
  const userAgent = Astro.request.headers.get('user-agent') || '';
  const referrer = Astro.request.headers.get('referer') || '';
  
  // Track asynchronously, don't block page render
  trackProductView(product.id, session.user.id, ipAddress, userAgent, referrer).catch(console.error);
}

// Format file size
const formatFileSize = (sizeMB: number): string => {
  const size = Number(sizeMB);
  if (size < 1) {
    return `${(size * 1024).toFixed(0)} KB`;
  } else if (size >= 1000) {
    return `${(size / 1024).toFixed(1)} GB`;
  } else {
    return `${size.toFixed(1)} MB`;
  }
};

