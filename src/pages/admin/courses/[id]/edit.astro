---
/**
 * T068: Admin Course Edit Page
 *
 * Full-featured course editor with:
 * - All course fields editable
 * - File uploads for images and videos
 * - Price in dollars (converted to cents for API)
 * - Immediate publish toggle
 * - Admin authentication required
 */

import AdminLayout from '@/layouts/AdminLayout.astro';
import FileUpload from '@/components/FileUpload.astro';
import type { CourseLevel } from '@/types';
import { getSessionFromRequest } from '@/lib/auth/session';
import { getCourseById } from '@/services/course.service';

export const prerender = false;

// Check authentication
const session = await getSessionFromRequest(Astro.cookies);
if (!session) {
  const currentPath = encodeURIComponent(Astro.url.pathname);
  return Astro.redirect(`/login?redirect=${currentPath}`);
}

// Get course ID from URL params
const { id } = Astro.params;
if (!id) {
  return Astro.redirect('/admin/courses');
}

// Fetch course data
let course;
try {
  course = await getCourseById(id);
} catch (error) {
  console.error('Error fetching course:', error);
  return Astro.redirect('/admin/courses?error=course_not_found');
}

// Course level options
const courseLevels: CourseLevel[] = ['beginner', 'intermediate', 'advanced'];

// Convert price from cents to dollars for display
const priceInDollars = (course.price / 100).toFixed(2);

// Convert duration from seconds to hours for display
const durationInHours = (course.duration / 3600).toFixed(1);
---

<AdminLayout title={`Edit Course: ${course.title}`}>
  <div class="max-w-5xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border">
      <div class="px-6 py-4 border-b flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Edit Course</h1>
          <p class="text-sm text-gray-600 mt-1">Update course details, media, and settings</p>
        </div>
        <a
          href="/admin/courses"
          class="px-4 py-2 text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 transition-colors"
        >
          Back to Courses
        </a>
      </div>

      <form id="courseForm" class="p-6 space-y-8" data-course-id={course.id}>
        <!-- Basic Information -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Basic Information
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="md:col-span-2">
              <label for="title" class="block text-sm font-medium text-gray-700 mb-1">
                Title <span class="text-red-600">*</span>
              </label>
              <input
                type="text"
                id="title"
                name="title"
                required
                value={course.title}
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="Enter course title"
              />
            </div>

            <div class="md:col-span-2">
              <label for="slug" class="block text-sm font-medium text-gray-700 mb-1">
                Slug <span class="text-red-600">*</span>
              </label>
              <input
                type="text"
                id="slug"
                name="slug"
                required
                value={course.slug}
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500 font-mono text-sm"
                placeholder="course-url-slug"
              />
              <p class="mt-1 text-xs text-gray-500">Auto-generated from title (editable)</p>
            </div>
          </div>

          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">
              Short Description <span class="text-red-600">*</span>
            </label>
            <textarea
              id="description"
              name="description"
              required
              rows="3"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
              placeholder="Brief description shown in course listings"
            >{course.description}</textarea>
          </div>

          <div>
            <label for="longDescription" class="block text-sm font-medium text-gray-700 mb-1">
              Long Description
            </label>
            <textarea
              id="longDescription"
              name="longDescription"
              rows="6"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
              placeholder="Detailed description shown on course page"
            >{course.longDescription || ''}</textarea>
          </div>
        </div>

        <!-- Spanish Translations (T168 i18n) -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
            </svg>
            Spanish Translations
            <span class="text-xs font-normal text-gray-500 ml-2">(Optional - for Spanish-speaking users)</span>
          </h2>

          <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 space-y-4">
            <div>
              <label for="titleEs" class="block text-sm font-medium text-gray-700 mb-1">
                Title (Spanish)
              </label>
              <input
                type="text"
                id="titleEs"
                name="titleEs"
                value={course.titleEs || ''}
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="Titulo del curso en espanol"
              />
            </div>

            <div>
              <label for="descriptionEs" class="block text-sm font-medium text-gray-700 mb-1">
                Short Description (Spanish)
              </label>
              <textarea
                id="descriptionEs"
                name="descriptionEs"
                rows="3"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="Breve descripcion mostrada en los listados"
              >{course.descriptionEs || ''}</textarea>
            </div>

            <div>
              <label for="longDescriptionEs" class="block text-sm font-medium text-gray-700 mb-1">
                Long Description (Spanish)
              </label>
              <textarea
                id="longDescriptionEs"
                name="longDescriptionEs"
                rows="6"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="Descripcion detallada mostrada en la pagina del curso"
              >{course.longDescriptionEs || ''}</textarea>
            </div>

            <div>
              <label for="learningOutcomesEs" class="block text-sm font-medium text-gray-700 mb-1">
                Learning Outcomes (Spanish - one per line)
              </label>
              <textarea
                id="learningOutcomesEs"
                name="learningOutcomesEs"
                rows="4"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="Lo que los estudiantes aprenderan&#10;Cada linea se convierte en un punto"
              >{course.learningOutcomesEs ? course.learningOutcomesEs.join('\n') : ''}</textarea>
            </div>

            <div>
              <label for="prerequisitesEs" class="block text-sm font-medium text-gray-700 mb-1">
                Prerequisites (Spanish - one per line)
              </label>
              <textarea
                id="prerequisitesEs"
                name="prerequisitesEs"
                rows="4"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="Requisitos previos&#10;Cada linea se convierte en un punto"
              >{course.prerequisitesEs ? course.prerequisitesEs.join('\n') : ''}</textarea>
            </div>
          </div>
        </div>

        <!-- Course Details -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
            </svg>
            Course Details
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label for="price" class="block text-sm font-medium text-gray-700 mb-1">
                Price ($) <span class="text-red-600">*</span>
              </label>
              <div class="relative">
                <span class="absolute left-3 top-2 text-gray-500">$</span>
                <input
                  type="number"
                  id="price"
                  name="price"
                  required
                  min="0"
                  step="0.01"
                  value={priceInDollars}
                  class="w-full pl-7 pr-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                  placeholder="99.00"
                />
              </div>
              <p class="mt-1 text-xs text-gray-500">Enter 0 for free courses</p>
            </div>

            <div>
              <label for="duration" class="block text-sm font-medium text-gray-700 mb-1">
                Duration (hours) <span class="text-red-600">*</span>
              </label>
              <input
                type="number"
                id="duration"
                name="duration"
                required
                min="0.1"
                step="0.1"
                value={durationInHours}
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="2.5"
              />
              <p class="mt-1 text-xs text-gray-500">Total course duration</p>
            </div>

            <div>
              <label for="level" class="block text-sm font-medium text-gray-700 mb-1">
                Level <span class="text-red-600">*</span>
              </label>
              <select
                id="level"
                name="level"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
              >
                <option value="">Select Level</option>
                {courseLevels.map(level => (
                  <option value={level} selected={course.level === level}>
                    {level.charAt(0).toUpperCase() + level.slice(1)}
                  </option>
                ))}
              </select>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="category" class="block text-sm font-medium text-gray-700 mb-1">
                Category <span class="text-red-600">*</span>
              </label>
              <input
                type="text"
                id="category"
                name="category"
                required
                value={course.category}
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="Meditation, Yoga, etc."
              />
            </div>

            <div>
              <label for="tags" class="block text-sm font-medium text-gray-700 mb-1">
                Tags (comma-separated)
              </label>
              <input
                type="text"
                id="tags"
                name="tags"
                value={course.tags ? course.tags.join(', ') : ''}
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                placeholder="meditation, mindfulness, stress-relief"
              />
            </div>
          </div>
        </div>

        <!-- Media -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Media
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <FileUpload
              name="imageUrl"
              label="Main Image"
              accept="image/*"
              maxSize={10 * 1024 * 1024}
              currentValue={course.imageUrl}
              helpText="Main course image (1200x630px recommended)"
              folder="courses/images"
            />

            <FileUpload
              name="thumbnailUrl"
              label="Thumbnail"
              accept="image/*"
              maxSize={5 * 1024 * 1024}
              currentValue={course.thumbnailUrl}
              helpText="Thumbnail for listings (400x300px recommended)"
              folder="courses/thumbnails"
            />
          </div>

          <FileUpload
            name="previewVideoUrl"
            label="Preview Video"
            accept="video/*"
            maxSize={100 * 1024 * 1024}
            currentValue={course.previewVideoUrl}
            helpText="Free preview video shown on course page (max 100MB)"
            folder="courses/previews"
          />
        </div>

        <!-- Learning Content -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            Learning Content
          </h2>

          <div>
            <label for="learningOutcomes" class="block text-sm font-medium text-gray-700 mb-1">
              Learning Outcomes (one per line)
            </label>
            <textarea
              id="learningOutcomes"
              name="learningOutcomes"
              rows="4"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
              placeholder="What students will learn&#10;Each line becomes a bullet point"
            >{course.learningOutcomes ? course.learningOutcomes.join('\n') : ''}</textarea>
          </div>

          <div>
            <label for="prerequisites" class="block text-sm font-medium text-gray-700 mb-1">
              Prerequisites (one per line)
            </label>
            <textarea
              id="prerequisites"
              name="prerequisites"
              rows="4"
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
              placeholder="Required prerequisites&#10;Each line becomes a bullet point"
            >{course.prerequisites ? course.prerequisites.join('\n') : ''}</textarea>
          </div>
        </div>

        <!-- Publishing Options -->
        <div class="space-y-4">
          <h2 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Publishing Options
          </h2>

          <div class="bg-gray-50 rounded-lg p-4 space-y-4">
            <label class="flex items-start gap-3 cursor-pointer">
              <input
                type="checkbox"
                name="isPublished"
                checked={course.isPublished}
                class="h-5 w-5 mt-1 rounded border-gray-300 text-purple-600 focus:ring-purple-500"
              />
              <div>
                <span class="font-medium text-gray-900">Published</span>
                <p class="text-sm text-gray-500">Make this course visible to users immediately</p>
              </div>
            </label>

            <label class="flex items-start gap-3 cursor-pointer">
              <input
                type="checkbox"
                name="isFeatured"
                checked={course.isFeatured}
                class="h-5 w-5 mt-1 rounded border-gray-300 text-purple-600 focus:ring-purple-500"
              />
              <div>
                <span class="font-medium text-gray-900">Featured</span>
                <p class="text-sm text-gray-500">Show this course prominently on the homepage</p>
              </div>
            </label>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t">
          <a
            href="/admin/courses"
            class="px-6 py-2 text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 transition-colors"
          >
            Cancel
          </a>
          <div class="flex gap-3">
            <button
              type="submit"
              id="saveButton"
              class="px-6 py-2 text-white bg-purple-600 rounded-md hover:bg-purple-700 transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Save Changes
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>

<!-- Slug generation script -->
<script is:inline>
document.addEventListener('DOMContentLoaded', () => {
  const titleInput = document.getElementById('title');
  const slugInput = document.getElementById('slug');

  function generateSlug(text) {
    return text
      .toLowerCase()
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/^-|-$/g, '');
  }

  if (titleInput && slugInput) {
    titleInput.dataset.previousValue = titleInput.value;

    titleInput.addEventListener('input', () => {
      const currentSlug = slugInput.value;
      const autoSlug = generateSlug(titleInput.value);

      if (!currentSlug || currentSlug === generateSlug(titleInput.dataset.previousValue || '')) {
        slugInput.value = autoSlug;
      }

      titleInput.dataset.previousValue = titleInput.value;
    });
  }
});
</script>

<script>
import { useToast } from '@/lib/toast';
import type { CourseLevel } from '@/types';

document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('courseForm') as HTMLFormElement;
  const saveButton = document.getElementById('saveButton') as HTMLButtonElement;
  const toast = useToast();

  if (!form) {
    console.error('Course form not found!');
    return;
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Validate required fields
    const requiredFields = form.querySelectorAll('[required]');
    let isValid = true;
    let firstInvalidField: HTMLElement | null = null;

    requiredFields.forEach((field) => {
      const input = field as HTMLInputElement | HTMLSelectElement | HTMLTextAreaElement;
      if (!input.value.trim()) {
        input.classList.add('border-red-500', 'ring-2', 'ring-red-500');
        isValid = false;
        if (!firstInvalidField) {
          firstInvalidField = input;
        }
      } else {
        input.classList.remove('border-red-500', 'ring-2', 'ring-red-500');
      }
    });

    if (!isValid && firstInvalidField) {
      firstInvalidField.focus();
      toast.error('Please fill in all required fields');
      return;
    }

    // Disable button and show loading
    saveButton.disabled = true;
    saveButton.innerHTML = `
      <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Saving...
    `;

    try {
      const formData = new FormData(form);
      const courseId = form.dataset.courseId;

      if (!courseId) {
        throw new Error('Course ID not found');
      }

      // Convert price from dollars to cents
      const priceInDollars = parseFloat(formData.get('price') as string);
      const priceInCents = Math.round(priceInDollars * 100);

      // Convert duration from hours to seconds
      const durationInHours = parseFloat(formData.get('duration') as string);
      const durationInSeconds = Math.round(durationInHours * 3600);

      const data = {
        title: formData.get('title') as string,
        slug: formData.get('slug') as string,
        description: formData.get('description') as string,
        longDescription: formData.get('longDescription') as string,
        price: priceInCents,
        duration: durationInSeconds,
        level: formData.get('level') as CourseLevel,
        category: formData.get('category') as string,
        imageUrl: formData.get('imageUrl') as string || undefined,
        thumbnailUrl: formData.get('thumbnailUrl') as string || undefined,
        previewVideoUrl: formData.get('previewVideoUrl') as string || undefined,
        tags: (formData.get('tags') as string)?.split(',').map(tag => tag.trim()).filter(Boolean) || [],
        learningOutcomes: (formData.get('learningOutcomes') as string)
          ?.split('\n')
          .map(outcome => outcome.trim())
          .filter(Boolean) || [],
        prerequisites: (formData.get('prerequisites') as string)
          ?.split('\n')
          .map(prereq => prereq.trim())
          .filter(Boolean) || [],
        isPublished: formData.get('isPublished') === 'on',
        isFeatured: formData.get('isFeatured') === 'on',
        // Spanish translation fields (T168 i18n)
        titleEs: (formData.get('titleEs') as string)?.trim() || null,
        descriptionEs: (formData.get('descriptionEs') as string)?.trim() || null,
        longDescriptionEs: (formData.get('longDescriptionEs') as string)?.trim() || null,
        learningOutcomesEs: (formData.get('learningOutcomesEs') as string)
          ?.split('\n')
          .map(outcome => outcome.trim())
          .filter(Boolean) || null,
        prerequisitesEs: (formData.get('prerequisitesEs') as string)
          ?.split('\n')
          .map(prereq => prereq.trim())
          .filter(Boolean) || null,
      };

      const response = await fetch(`/api/courses/${courseId}`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (!response.ok) {
        const error = await response.json();
        throw new Error(error.error || 'Failed to update course');
      }

      toast.success('Course updated successfully!');

      setTimeout(() => {
        window.location.href = '/admin/courses';
      }, 1000);
    } catch (error: any) {
      toast.error(error.message || 'Failed to update course');

      // Re-enable button
      saveButton.disabled = false;
      saveButton.innerHTML = `
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        Save Changes
      `;
    }
  });
});
</script>
