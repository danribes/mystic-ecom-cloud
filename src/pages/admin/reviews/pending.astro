---
/**
 * T118: Admin Pending Reviews Page
 *
 * Displays all pending (unapproved) reviews for admin moderation.
 * Allows admins to approve or reject reviews.
 *
 * Features:
 * - List of pending reviews with course and user details
 * - Filtering by course, rating, date
 * - Sorting options
 * - Approve/Reject actions
 * - Pagination
 * - Verified purchase indicator
 */

import AdminLayout from '@/layouts/AdminLayout.astro';
import { ReviewService } from '@/lib/reviews';
import { getPool } from '@/lib/db';

const pool = getPool();
const reviewService = new ReviewService(pool);

// Get URL parameters for filtering and pagination
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get('page') || '1', 10);
const courseId = url.searchParams.get('courseId') || undefined;
const minRating = url.searchParams.get('minRating') ? parseInt(url.searchParams.get('minRating')!) : undefined;
const maxRating = url.searchParams.get('maxRating') ? parseInt(url.searchParams.get('maxRating')!) : undefined;
const sortBy = (url.searchParams.get('sortBy') as 'createdAt' | 'rating' | 'updatedAt') || 'createdAt';
const sortOrder = (url.searchParams.get('sortOrder') as 'ASC' | 'DESC') || 'DESC';

// Fetch pending reviews
let reviewsData;
let error = null;

try {
  reviewsData = await reviewService.getReviews({
    isApproved: false, // Only fetch pending reviews
    courseId,
    minRating,
    maxRating,
    page,
    limit: 20,
    sortBy,
    sortOrder,
  });
} catch (e) {
  error = e instanceof Error ? e.message : 'Failed to load pending reviews';
  console.error('Error fetching pending reviews:', e);
  // Provide empty data on error
  reviewsData = {
    reviews: [],
    total: 0,
    page: 1,
    limit: 20,
    totalPages: 0,
    hasMore: false,
  };
}

// Fetch total pending count for header
let pendingCount = 0;
try {
  const countResult = await pool.query(
    `SELECT COUNT(*) as count FROM reviews WHERE is_approved = false`
  );
  pendingCount = parseInt(countResult.rows[0].count);
} catch (e) {
  console.error('Error fetching pending count:', e);
}

// Helper: Format date
function formatDate(date: Date | string): string {
  const d = typeof date === 'string' ? new Date(date) : date;
  return d.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  });
}

// Helper: Build filter URL
function buildFilterUrl(params: Record<string, string>): string {
  const newUrl = new URL(url);
  Object.entries(params).forEach(([key, value]) => {
    if (value) {
      newUrl.searchParams.set(key, value);
    } else {
      newUrl.searchParams.delete(key);
    }
  });
  return newUrl.pathname + newUrl.search;
}

// Render stars for rating
function renderStars(rating: number) {
  const stars = [];
  for (let i = 1; i <= 5; i++) {
    stars.push(i <= rating);
  }
  return stars;
}

// Compute page numbers for pagination (done in frontmatter to avoid JSX issues with < >)
const computePageNumbers = (): number[] => {
  const pageNumbers = [];
  const maxPages = Math.min(reviewsData.totalPages, 5);

  for (let i = 0; i < maxPages; i++) {
    let pageNum: number;

    if (reviewsData.totalPages <= 5) {
      pageNum = i + 1;
    } else if (page <= 3) {
      pageNum = i + 1;
    } else if (page >= reviewsData.totalPages - 2) {
      pageNum = reviewsData.totalPages - 4 + i;
    } else {
      pageNum = page - 2 + i;
    }

    pageNumbers.push(pageNum);
  }

  return pageNumbers;
};

const pageNumbers = computePageNumbers();
---

<AdminLayout
  title="Pending Reviews"
  description="Moderate and approve user-submitted course reviews"
>
  <!-- Page Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Pending Reviews</h1>
        <p class="mt-2 text-sm text-gray-600">
          Review and moderate user-submitted course reviews before they appear publicly
        </p>
      </div>
      <div class="flex items-center gap-4">
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg px-4 py-3">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-xs text-yellow-600 font-medium">Pending</p>
              <p class="text-2xl font-bold text-yellow-700">{pendingCount}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Error Banner -->
  {error && (
    <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <h3 class="text-sm font-medium text-red-800">Error Loading Reviews</h3>
          <p class="text-sm text-red-600 mt-1">{error}</p>
        </div>
      </div>
    </div>
  )}

  <!-- Filters and Sorting -->
  <div class="mb-6 bg-white rounded-lg shadow-sm border border-gray-200 p-4">
    <form method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Rating Filter -->
      <div>
        <label for="minRating" class="block text-sm font-medium text-gray-700 mb-1">
          Min Rating
        </label>
        <select
          id="minRating"
          name="minRating"
          class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
          onchange="this.form.submit()"
        >
          <option value="">All Ratings</option>
          <option value="1" selected={minRating === 1}>1 Star</option>
          <option value="2" selected={minRating === 2}>2 Stars</option>
          <option value="3" selected={minRating === 3}>3 Stars</option>
          <option value="4" selected={minRating === 4}>4 Stars</option>
          <option value="5" selected={minRating === 5}>5 Stars</option>
        </select>
      </div>

      <div>
        <label for="maxRating" class="block text-sm font-medium text-gray-700 mb-1">
          Max Rating
        </label>
        <select
          id="maxRating"
          name="maxRating"
          class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
          onchange="this.form.submit()"
        >
          <option value="">All Ratings</option>
          <option value="1" selected={maxRating === 1}>1 Star</option>
          <option value="2" selected={maxRating === 2}>2 Stars</option>
          <option value="3" selected={maxRating === 3}>3 Stars</option>
          <option value="4" selected={maxRating === 4}>4 Stars</option>
          <option value="5" selected={maxRating === 5}>5 Stars</option>
        </select>
      </div>

      <!-- Sort By -->
      <div>
        <label for="sortBy" class="block text-sm font-medium text-gray-700 mb-1">
          Sort By
        </label>
        <select
          id="sortBy"
          name="sortBy"
          class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
          onchange="this.form.submit()"
        >
          <option value="createdAt" selected={sortBy === 'createdAt'}>Date Submitted</option>
          <option value="rating" selected={sortBy === 'rating'}>Rating</option>
          <option value="updatedAt" selected={sortBy === 'updatedAt'}>Last Updated</option>
        </select>
      </div>

      <!-- Sort Order -->
      <div>
        <label for="sortOrder" class="block text-sm font-medium text-gray-700 mb-1">
          Order
        </label>
        <select
          id="sortOrder"
          name="sortOrder"
          class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
          onchange="this.form.submit()"
        >
          <option value="DESC" selected={sortOrder === 'DESC'}>Newest First</option>
          <option value="ASC" selected={sortOrder === 'ASC'}>Oldest First</option>
        </select>
      </div>

      <!-- Reset Filters -->
      <div class="md:col-span-4 flex justify-end">
        <a
          href="/admin/reviews/pending"
          class="text-sm text-blue-600 hover:text-blue-700 font-medium"
        >
          Reset Filters
        </a>
      </div>
    </form>
  </div>

  <!-- Reviews List -->
  {reviewsData.reviews.length === 0 ? (
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No Pending Reviews</h3>
      <p class="mt-2 text-sm text-gray-500">
        All reviews have been moderated. Great job!
      </p>
    </div>
  ) : (
    <div class="space-y-4">
      {reviewsData.reviews.map((review) => (
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6" data-review-id={review.id}>
          <div class="flex justify-between items-start">
            <!-- Review Details -->
            <div class="flex-1">
              <!-- Course Title -->
              <div class="mb-3">
                <h3 class="text-lg font-semibold text-gray-900">{review.courseTitle}</h3>
                <a
                  href={`/courses/${review.courseId}`}
                  class="text-sm text-blue-600 hover:text-blue-700"
                  target="_blank"
                >
                  View Course →
                </a>
              </div>

              <!-- Rating Stars -->
              <div class="flex items-center gap-2 mb-3">
                <div class="flex gap-1">
                  {renderStars(review.rating).map((filled) => (
                    <svg
                      class={`w-5 h-5 ${filled ? 'text-yellow-400' : 'text-gray-300'}`}
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <span class="text-sm font-medium text-gray-700">{review.rating} / 5</span>
              </div>

              <!-- Review Comment -->
              {review.comment && (
                <div class="mb-3">
                  <p class="text-gray-700 leading-relaxed">{review.comment}</p>
                </div>
              )}

              <!-- Reviewer Info -->
              <div class="flex items-center gap-4 text-sm text-gray-600">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="font-medium">{review.userName}</span>
                  <span class="text-gray-400">({review.userEmail})</span>
                </div>

                {review.isVerifiedPurchase && (
                  <div class="flex items-center gap-1 text-green-600">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-xs font-medium">Verified Purchase</span>
                  </div>
                )}

                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{formatDate(review.createdAt)}</span>
                </div>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="ml-6 flex flex-col gap-2 min-w-[120px]">
              <button
                type="button"
                class="approve-btn px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
                data-review-id={review.id}
                data-action="approve"
              >
                ✓ Approve
              </button>
              <button
                type="button"
                class="reject-btn px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-medium rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
                data-review-id={review.id}
                data-action="reject"
              >
                ✕ Reject
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  )}

  <!-- Pagination -->
  {reviewsData.totalPages > 1 && (
    <div class="mt-8 flex items-center justify-center gap-2">
      {/* Previous Button */}
      {page > 1 ? (
        <a
          href={buildFilterUrl({ page: (page - 1).toString() })}
          class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          Previous
        </a>
      ) : (
        <span class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-400 bg-gray-100 cursor-not-allowed">
          Previous
        </span>
      )}

      {/* Page Numbers */}
      <div class="flex items-center gap-1">
        {pageNumbers.map((pageNum) => (
          <a
            href={buildFilterUrl({ page: pageNum.toString() })}
            class={`px-4 py-2 rounded-md text-sm font-medium transition-colors ${
              pageNum === page
                ? 'bg-blue-600 text-white'
                : 'text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-500'
            }`}
          >
            {pageNum}
          </a>
        ))}
      </div>

      {/* Next Button */}
      {page < reviewsData.totalPages ? (
        <a
          href={buildFilterUrl({ page: (page + 1).toString() })}
          class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          Next
        </a>
      ) : (
        <span class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-400 bg-gray-100 cursor-not-allowed">
          Next
        </span>
      )}
    </div>
  )}

  <!-- Toast Notification Container -->
  <div id="toast-container" class="fixed bottom-4 right-4 z-50"></div>
</AdminLayout>

<script>
  // Client-side script for approve/reject actions
  document.addEventListener('DOMContentLoaded', () => {
    const approveBtns = document.querySelectorAll('.approve-btn');
    const rejectBtns = document.querySelectorAll('.reject-btn');

    // Show toast notification
    function showToast(message: string, type: 'success' | 'error') {
      const toast = document.createElement('div');
      toast.className = `px-6 py-4 rounded-lg shadow-lg text-white ${
        type === 'success' ? 'bg-green-600' : 'bg-red-600'
      } transition-opacity duration-300`;
      toast.textContent = message;

      const container = document.getElementById('toast-container');
      if (container) {
        container.appendChild(toast);
        setTimeout(() => {
          toast.style.opacity = '0';
          setTimeout(() => toast.remove(), 300);
        }, 3000);
      }
    }

    // Handle approve/reject
    async function handleAction(reviewId: string, action: 'approve' | 'reject') {
      try {
        const response = await fetch(`/api/admin/reviews/${action}`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ reviewId }),
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.message || `Failed to ${action} review`);
        }

        const result = await response.json();
        showToast(
          `Review ${action === 'approve' ? 'approved' : 'rejected'} successfully!`,
          'success'
        );

        // Remove the review card from the page
        setTimeout(() => {
          const reviewCard = document.querySelector(`[data-review-id="${reviewId}"]`);
          if (reviewCard) {
            reviewCard.remove();
          }

          // If no more reviews on page, reload to show empty state
          const remainingReviews = document.querySelectorAll('[data-review-id]');
          if (remainingReviews.length === 0) {
            window.location.reload();
          }
        }, 1000);
      } catch (error) {
        console.error('Error:', error);
        showToast(
          error instanceof Error ? error.message : `Failed to ${action} review`,
          'error'
        );
      }
    }

    // Attach event listeners
    approveBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const reviewId = btn.getAttribute('data-review-id');
        if (reviewId) {
          if (confirm('Are you sure you want to approve this review?')) {
            handleAction(reviewId, 'approve');
          }
        }
      });
    });

    rejectBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        const reviewId = btn.getAttribute('data-review-id');
        if (reviewId) {
          if (confirm('Are you sure you want to reject this review?')) {
            handleAction(reviewId, 'reject');
          }
        }
      });
    });
  });
</script>
