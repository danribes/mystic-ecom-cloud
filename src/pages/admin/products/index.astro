/**
 * T100: Admin Digital Products List Page
 *
 * Manage digital products catalog with filtering, search, and bulk actions
 */

import AdminLayout from '@/layouts/AdminLayout.astro';
import { getProducts } from '@/lib/products';

export const prerender = false;

const title = 'Digital Products';
const description = 'Manage digital products, uploads, and access controls';

// Get query parameters for filtering and pagination
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get('page') || '1', 10);
const limit = parseInt(url.searchParams.get('limit') || '20', 10);
const search = url.searchParams.get('search') || '';
const type = url.searchParams.get('type') as 'pdf' | 'audio' | 'video' | 'ebook' | null || null;
const published = url.searchParams.get('published') || '';
const sortBy = url.searchParams.get('sortBy') || 'newest';

let products: any[] = [];
let total = 0;
let error: string | null = null;

try {
  // Fetch products with filters
  const offset = (page - 1) * limit;

  const allProducts = await getProducts({
    type: type || undefined,
    search: search || undefined,
    sortBy: sortBy as any,
    limit,
    offset,
  });

  // Filter by published status if specified
  if (published === 'true') {
    products = allProducts.filter(p => p.is_published);
  } else if (published === 'false') {
    products = allProducts.filter(p => !p.is_published);
  } else {
    products = allProducts;
  }

  total = products.length;

} catch (e) {
  console.error('Error loading products:', e);
  error = 'Failed to load products. Please try again.';
  products = [];
  total = 0;
}

const totalPages = Math.ceil(total / limit);

// Generate pagination numbers
const generatePaginationNumbers = () => {
  const maxVisible = 7;
  const numbers: number[] = [];

  if (totalPages <= maxVisible) {
    for (let i = 1; i <= totalPages; i++) {
      numbers.push(i);
    }
  } else if (page <= 4) {
    for (let i = 1; i <= maxVisible; i++) {
      numbers.push(i);
    }
  } else if (page >= totalPages - 3) {
    for (let i = totalPages - maxVisible + 1; i <= totalPages; i++) {
      numbers.push(i);
    }
  } else {
    for (let i = page - 3; i <= page + 3; i++) {
      numbers.push(i);
    }
  }

  return numbers;
};

const paginationNumbers = totalPages > 0 ? generatePaginationNumbers() : [];

// Product types for filter
const productTypes = [
  { value: 'pdf', label: 'PDF Documents', icon: 'ðŸ“„' },
  { value: 'audio', label: 'Audio Files', icon: 'ðŸŽµ' },
  { value: 'video', label: 'Video Files', icon: 'ðŸŽ¥' },
  { value: 'ebook', label: 'eBooks', icon: 'ðŸ“š' }
];

// Format file size
const formatFileSize = (sizeMB: number): string => {
  const size = Number(sizeMB);
  if (size < 1) return `${(size * 1024).toFixed(0)} KB`;
  if (size >= 1000) return `${(size / 1024).toFixed(1)} GB`;
  return `${size.toFixed(1)} MB`;
};

// Format currency
const formatCurrency = (amount: number): string => {
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
  }).format(Number(amount));
};

// Format date
const formatDate = (date: Date): string => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  }).format(new Date(date));
};
