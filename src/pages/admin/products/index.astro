    </div>
  </div>

  <!-- Filters Section -->
  <div class="bg-white shadow-sm rounded-lg mb-6 border">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Filters & Search</h2>
    </div>

    <form method="GET" class="px-6 py-4" data-testid="filter-form">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">

        <!-- Search Input -->
        <div>
          <label for="search" class="block text-sm font-medium text-gray-700 mb-1">
            Search
          </label>
          <input
            type="text"
            id="search"
            name="search"
            value={search}
            placeholder="Search products..."
            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm"
            data-testid="search-input"
          />
        </div>

        <!-- Type Filter -->
        <div>
          <label for="type" class="block text-sm font-medium text-gray-700 mb-1">
            Product Type
          </label>
          <select
            id="type"
            name="type"
            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm"
            data-testid="type-filter"
          >
            <option value="">All Types</option>
            {productTypes.map(pt => (
              <option value={pt.value} selected={type === pt.value}>
                {pt.icon} {pt.label}
              </option>
            ))}
          </select>
        </div>

        <!-- Published Status -->
        <div>
          <label for="published" class="block text-sm font-medium text-gray-700 mb-1">
            Status
          </label>
          <select
            id="published"
            name="published"
            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-purple-500 focus:border-purple-500 sm:text-sm"
            data-testid="published-filter"
