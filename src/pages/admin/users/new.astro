---
/**
 * Admin Create User Page
 *
 * Allows administrators to create new user accounts:
 * - Name
 * - Email
 * - Password
 * - WhatsApp number
 * - Role (user/admin)
 * - Email verification status
 */

export const prerender = false;

import AdminLayout from '@/layouts/AdminLayout.astro';
import { createUser } from '@/services/user.service';
import { useTranslations } from '@/lib/pageTranslations';

const { t } = useTranslations(Astro.locals);

const title = t('admin.createUser');
const description = t('admin.createUserDesc');

let error: string | null = null;
let success: string | null = null;
let formData = {
  name: '',
  email: '',
  whatsapp: '',
  role: 'user' as 'user' | 'admin',
  email_verified: false
};

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const data = await Astro.request.formData();
    const name = data.get('name')?.toString().trim() || '';
    const email = data.get('email')?.toString().trim() || '';
    const password = data.get('password')?.toString() || '';
    const confirmPassword = data.get('confirm_password')?.toString() || '';
    const whatsapp = data.get('whatsapp')?.toString().trim() || null;
    const role = data.get('role')?.toString() as 'user' | 'admin';
    const emailVerified = data.get('email_verified') === 'on';

    // Store form data for re-populating form on error
    formData = {
      name,
      email,
      whatsapp: whatsapp || '',
      role: role || 'user',
      email_verified: emailVerified
    };

    // Validate required fields
    if (!name) {
      error = t('admin.nameRequired');
    } else if (!email) {
      error = t('admin.emailRequired');
    } else if (!password || password.length < 8) {
      error = t('admin.passwordHint');
    } else if (password !== confirmPassword) {
      error = t('admin.passwordsDoNotMatch');
    } else {
      const result = await createUser({
        name,
        email,
        password,
        role,
        whatsapp,
        email_verified: emailVerified
      });

      if (result.success) {
        // Redirect to the user list with success
        return Astro.redirect('/admin/users');
      } else {
        error = result.message;
      }
    }
  } catch (e) {
    console.error('Error creating user:', e);
    error = t('admin.createError');
  }
}
---

<AdminLayout title={title} description={description}>
  <!-- Back Link -->
  <div class="mb-6">
    <a
      href="/admin/users"
      class="inline-flex items-center text-purple-600 hover:text-purple-800 font-medium"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      {t('admin.backToUsers')}
    </a>
  </div>

  <!-- Error Message -->
  {error && (
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="text-red-800">{error}</p>
      </div>
    </div>
  )}

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Info Card -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="text-center">
          <div class="w-20 h-20 rounded-full bg-purple-100 flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
            </svg>
          </div>
          <h2 class="text-xl font-semibold text-gray-900">{t('admin.addNewUser')}</h2>
          <p class="text-gray-500 mt-2">{t('admin.createUserDesc')}</p>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200">
          <div class="bg-blue-50 rounded-lg p-4 text-sm text-blue-800">
            <p class="font-medium mb-2">Password Requirements:</p>
            <ul class="list-disc list-inside text-blue-700 space-y-1">
              <li>Minimum 8 characters</li>
              <li>One uppercase letter</li>
              <li>One lowercase letter</li>
              <li>One number</li>
              <li>One special character</li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Create Form -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">{t('admin.createUser')}</h3>

        <form method="POST" class="space-y-6">
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
              {t('admin.name')} <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              value={formData.name}
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
              {t('admin.email')} <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              value={formData.email}
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
          </div>

          <!-- Password -->
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
              {t('auth.password')} <span class="text-red-500">*</span>
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              minlength="8"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
            <p class="mt-1 text-xs text-gray-500">{t('admin.passwordHint')}</p>
          </div>

          <!-- Confirm Password -->
          <div>
            <label for="confirm_password" class="block text-sm font-medium text-gray-700 mb-1">
              {t('admin.confirmPasswordLabel')} <span class="text-red-500">*</span>
            </label>
            <input
              type="password"
              id="confirm_password"
              name="confirm_password"
              required
              minlength="8"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
          </div>

          <!-- WhatsApp -->
          <div>
            <label for="whatsapp" class="block text-sm font-medium text-gray-700 mb-1">
              WhatsApp
            </label>
            <input
              type="tel"
              id="whatsapp"
              name="whatsapp"
              value={formData.whatsapp}
              placeholder="+1234567890"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
            <p class="mt-1 text-xs text-gray-500">{t('admin.whatsappHint')}</p>
          </div>

          <!-- Role -->
          <div>
            <label for="role" class="block text-sm font-medium text-gray-700 mb-1">
              {t('admin.role')}
            </label>
            <select
              id="role"
              name="role"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            >
              <option value="user" selected={formData.role === 'user'}>üë§ {t('admin.userBadge')}</option>
              <option value="admin" selected={formData.role === 'admin'}>üîê {t('admin.adminBadge')}</option>
            </select>
          </div>

          <!-- Email Verified -->
          <div>
            <label class="flex items-center cursor-pointer">
              <input
                type="checkbox"
                name="email_verified"
                checked={formData.email_verified}
                class="w-5 h-5 text-purple-600 border-2 border-gray-300 rounded focus:ring-purple-500 cursor-pointer"
              />
              <span class="ml-3 text-sm text-gray-700">{t('admin.emailVerified')}</span>
            </label>
            <p class="mt-1 text-xs text-gray-500 ml-8">{t('admin.emailVerifiedHint')}</p>
          </div>

          <!-- Actions -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <a
              href="/admin/users"
              class="px-4 py-2 text-gray-600 hover:text-gray-900 font-medium"
            >
              {t('admin.cancel')}
            </a>
            <button
              type="submit"
              class="px-6 py-2 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            >
              {t('admin.createUser')}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>
