---
/**
 * Admin Edit User Page
 *
 * Allows administrators to edit user details:
 * - Name
 * - Email
 * - WhatsApp number
 * - Role (user/admin)
 * - Email verification status
 */

export const prerender = false;

import AdminLayout from '@/layouts/AdminLayout.astro';
import { getUserById, updateUser } from '@/services/user.service';
import { useTranslations } from '@/lib/pageTranslations';

const { locale, t } = useTranslations(Astro.locals);

// Get user ID from URL
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/admin/users');
}

// Get current admin user
const currentUserId = Astro.locals.user?.id;

// Fetch user data
let user = await getUserById(id);
let error: string | null = null;
let success: string | null = null;

if (!user) {
  return Astro.redirect('/admin/users');
}

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const name = formData.get('name')?.toString().trim() || '';
    const email = formData.get('email')?.toString().trim() || '';
    const whatsapp = formData.get('whatsapp')?.toString().trim() || null;
    const role = formData.get('role')?.toString() as 'user' | 'admin';
    const emailVerified = formData.get('email_verified') === 'on';

    // Validate required fields
    if (!name) {
      error = t('admin.nameRequired');
    } else if (!email) {
      error = t('admin.emailRequired');
    } else {
      const result = await updateUser(
        id,
        {
          name,
          email,
          whatsapp,
          role,
          email_verified: emailVerified
        },
        currentUserId || ''
      );

      if (result.success) {
        success = t('admin.userUpdatedSuccess');
        // Refresh user data
        user = await getUserById(id);
      } else {
        error = result.message;
      }
    }
  } catch (e) {
    console.error('Error updating user:', e);
    error = t('admin.updateError');
  }
}

const title = t('admin.editUser');
const description = `${t('admin.editing')}: ${user?.name}`;

// Format date
const formatDate = (date: Date): string => {
  return new Intl.DateTimeFormat(locale === 'es' ? 'es-ES' : 'en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  }).format(new Date(date));
};
---

<AdminLayout title={title} description={description}>
  <!-- Back Link -->
  <div class="mb-6">
    <a
      href="/admin/users"
      class="inline-flex items-center text-purple-600 hover:text-purple-800 font-medium"
    >
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      {t('admin.backToUsers')}
    </a>
  </div>

  <!-- Success Message -->
  {success && (
    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <p class="text-green-800">{success}</p>
      </div>
    </div>
  )}

  <!-- Error Message -->
  {error && (
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex items-center">
        <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="text-red-800">{error}</p>
      </div>
    </div>
  )}

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- User Info Card -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <div class="text-center">
          <div class="w-20 h-20 rounded-full bg-purple-100 flex items-center justify-center mx-auto mb-4">
            <span class="text-purple-600 font-bold text-3xl">
              {user?.name.charAt(0).toUpperCase()}
            </span>
          </div>
          <h2 class="text-xl font-semibold text-gray-900">{user?.name}</h2>
          <p class="text-gray-500">{user?.email}</p>
          <div class="mt-3">
            <span class={`inline-flex px-3 py-1 text-sm font-semibold rounded-full ${
              user?.role === 'admin'
                ? 'bg-purple-100 text-purple-800'
                : 'bg-gray-100 text-gray-800'
            }`}>
              {user?.role === 'admin' ? `ğŸ” ${t('admin.adminBadge')}` : `ğŸ‘¤ ${t('admin.userBadge')}`}
            </span>
          </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200 space-y-3">
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">{t('admin.emailStatus')}</span>
            <span class={user?.email_verified ? 'text-green-600' : 'text-yellow-600'}>
              {user?.email_verified ? `âœ… ${t('admin.verified')}` : `â³ ${t('admin.pendingVerification')}`}
            </span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">{t('admin.joined')}</span>
            <span class="text-gray-900">{user && formatDate(user.created_at)}</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">{t('admin.lastUpdated')}</span>
            <span class="text-gray-900">{user && formatDate(user.updated_at)}</span>
          </div>
          {user?.whatsapp && (
            <div class="flex justify-between text-sm">
              <span class="text-gray-500">WhatsApp</span>
              <span class="text-gray-900">{user.whatsapp}</span>
            </div>
          )}
        </div>

        {user?.id === currentUserId && (
          <div class="mt-6 pt-4 border-t border-gray-200">
            <div class="bg-yellow-50 rounded-lg p-3 text-sm text-yellow-800">
              <span class="font-medium">âš ï¸ {t('admin.thisIsYou')}</span>
              <p class="mt-1 text-yellow-700">{t('admin.cannotChangeOwnRole')}</p>
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Edit Form -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">{t('admin.editUserDetails')}</h3>

        <form method="POST" class="space-y-6">
          <!-- Name -->
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
              {t('admin.name')} <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              value={user?.name}
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
              {t('admin.email')} <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              value={user?.email}
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
          </div>

          <!-- WhatsApp -->
          <div>
            <label for="whatsapp" class="block text-sm font-medium text-gray-700 mb-1">
              WhatsApp
            </label>
            <input
              type="tel"
              id="whatsapp"
              name="whatsapp"
              value={user?.whatsapp || ''}
              placeholder="+1234567890"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
            />
            <p class="mt-1 text-xs text-gray-500">{t('admin.whatsappHint')}</p>
          </div>

          <!-- Role -->
          <div>
            <label for="role" class="block text-sm font-medium text-gray-700 mb-1">
              {t('admin.role')}
            </label>
            <select
              id="role"
              name="role"
              disabled={user?.id === currentUserId}
              class={`w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 ${
                user?.id === currentUserId ? 'bg-gray-100 cursor-not-allowed' : ''
              }`}
            >
              <option value="user" selected={user?.role === 'user'}>ğŸ‘¤ {t('admin.userBadge')}</option>
              <option value="admin" selected={user?.role === 'admin'}>ğŸ” {t('admin.adminBadge')}</option>
            </select>
            {user?.id === currentUserId && (
              <p class="mt-1 text-xs text-yellow-600">{t('admin.cannotChangeOwnRole')}</p>
            )}
          </div>

          <!-- Email Verified -->
          <div>
            <label class="flex items-center cursor-pointer">
              <input
                type="checkbox"
                name="email_verified"
                checked={user?.email_verified}
                class="w-5 h-5 text-purple-600 border-2 border-gray-300 rounded focus:ring-purple-500 cursor-pointer"
              />
              <span class="ml-3 text-sm text-gray-700">{t('admin.emailVerified')}</span>
            </label>
            <p class="mt-1 text-xs text-gray-500 ml-8">{t('admin.emailVerifiedHint')}</p>
          </div>

          <!-- Actions -->
          <div class="flex items-center justify-between pt-6 border-t border-gray-200">
            <a
              href="/admin/users"
              class="px-4 py-2 text-gray-600 hover:text-gray-900 font-medium"
            >
              {t('admin.cancel')}
            </a>
            <button
              type="submit"
              class="px-6 py-2 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700 transition-colors focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
            >
              {t('admin.saveChanges')}
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</AdminLayout>
