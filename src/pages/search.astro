---
/**
 * T108: Search Results Page
 * 
 * Displays search results with filtering, sorting, and pagination.
 * Integrates with T106 Search API endpoint.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import FilterSidebar from '../components/FilterSidebar.astro';
import SearchResult from '../components/SearchResult.astro';

// Get search parameters from URL
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';
const type = url.searchParams.get('type') || '';
const minPrice = url.searchParams.get('minPrice') || '';
const maxPrice = url.searchParams.get('maxPrice') || '';
const level = url.searchParams.get('level') || '';
const productType = url.searchParams.get('productType') || '';
const city = url.searchParams.get('city') || '';
const limit = parseInt(url.searchParams.get('limit') || '20');
const offset = parseInt(url.searchParams.get('offset') || '0');

// Initialize results
let results: any = null;
let error: string | null = null;

// Fetch search results if query exists
if (query) {
  try {
    // Build API URL with parameters
    const apiUrl = new URL('/api/search', url.origin);
    apiUrl.searchParams.set('q', query);
    if (type) apiUrl.searchParams.set('type', type);
    if (minPrice) apiUrl.searchParams.set('minPrice', minPrice);
    if (maxPrice) apiUrl.searchParams.set('maxPrice', maxPrice);
    if (level) apiUrl.searchParams.set('level', level);
    if (productType) apiUrl.searchParams.set('productType', productType);
    if (city) apiUrl.searchParams.set('city', city);
    apiUrl.searchParams.set('limit', limit.toString());
    apiUrl.searchParams.set('offset', offset.toString());

    const response = await fetch(apiUrl.toString());
    const data = await response.json();

    if (data.success) {
      results = data.data;
    } else {
      error = data.error || 'Failed to fetch search results';
    }
  } catch (err) {
    console.error('Search error:', err);
    error = 'An error occurred while searching. Please try again.';
  }
}

// Calculate pagination
const currentPage = Math.floor(offset / limit) + 1;
const totalPages = results ? Math.ceil(results.total / limit) : 0;
const hasNextPage = results ? results.hasMore : false;
const hasPrevPage = offset > 0;

// Build pagination URLs
const buildPageUrl = (newOffset: number) => {
  const pageUrl = new URL(url);
  pageUrl.searchParams.set('offset', newOffset.toString());
  return pageUrl.toString();
};

// Compute page numbers for pagination (avoid JSX issues with < >)
const computeSearchPageNumbers = (): number[] => {
  const pageNumbers = [];
  const maxPages = Math.min(totalPages, 7);

  for (let i = 0; i < maxPages; i++) {
    let pageNum: number;
    if (totalPages <= 7) {
      pageNum = i + 1;
    } else if (currentPage <= 4) {
      pageNum = i + 1;
    } else if (currentPage >= totalPages - 3) {
      pageNum = totalPages - 6 + i;
    } else {
      pageNum = currentPage - 3 + i;
    }
    pageNumbers.push(pageNum);
  }

  return pageNumbers;
};

const searchPageNumbers = computeSearchPageNumbers();

const title = query ? `Search results for "${query}"` : 'Search';
---

<BaseLayout title={title}>
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="mb-2 text-3xl font-bold text-text">
        {query ? `Results for "${query}"` : 'Search'}
      </h1>
      {results && (
        <p class="text-text-light">
          Found {results.total} result{results.total !== 1 ? 's' : ''}
          {type && ` in ${type}s`}
        </p>
      )}
    </div>

    <div class="flex flex-col gap-8 lg:flex-row">
      <!-- Filter Sidebar -->
      <aside class="lg:w-64 lg:flex-shrink-0">
        <FilterSidebar
          currentQuery={query}
          currentType={type}
          currentMinPrice={minPrice}
          currentMaxPrice={maxPrice}
          currentLevel={level}
          currentProductType={productType}
          currentCity={city}
        />
      </aside>

      <!-- Main Content -->
      <main class="flex-1">
        {!query && (
          <div class="rounded-lg border border-border bg-surface p-8 text-center">
            <svg
              class="mx-auto mb-4 h-16 w-16 text-text-light"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            </svg>
            <h2 class="mb-2 text-xl font-semibold text-text">Start your search</h2>
            <p class="text-text-light">
              Enter a search term above to find courses, products, and events.
            </p>
          </div>
        )}

        {error && (
          <div class="rounded-lg border border-error bg-error/10 p-4 text-error">
            <p class="font-medium">Error</p>
            <p class="text-sm">{error}</p>
          </div>
        )}

        {results && results.items.length === 0 && (
          <div class="rounded-lg border border-border bg-surface p-8 text-center">
            <svg
              class="mx-auto mb-4 h-16 w-16 text-text-light"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
            <h2 class="mb-2 text-xl font-semibold text-text">No results found</h2>
            <p class="text-text-light">
              Try adjusting your search or filters to find what you're looking for.
            </p>
          </div>
        )}

        {results && results.items.length > 0 && (
          <>
            <!-- Results List -->
            <div class="mb-8 space-y-4">
              {results.items.map((item: any) => (
                <SearchResult result={item} />
              ))}
            </div>

            <!-- Pagination -->
            {totalPages > 1 && (
              <nav
                class="flex items-center justify-between border-t border-border pt-6"
                aria-label="Pagination"
              >
                <div class="flex flex-1 justify-between sm:hidden">
                  {hasPrevPage ? (
                    <a
                      href={buildPageUrl(offset - limit)}
                      class="inline-flex items-center rounded-lg border border-border bg-background px-4 py-2 text-sm font-medium text-text transition-colors hover:bg-surface"
                    >
                      Previous
                    </a>
                  ) : (
                    <span
                      class="inline-flex items-center rounded-lg border border-border bg-surface px-4 py-2 text-sm font-medium text-text-light"
                    >
                      Previous
                    </span>
                  )}

                  {hasNextPage ? (
                    <a
                      href={buildPageUrl(offset + limit)}
                      class="ml-3 inline-flex items-center rounded-lg border border-border bg-background px-4 py-2 text-sm font-medium text-text transition-colors hover:bg-surface"
                    >
                      Next
                    </a>
                  ) : (
                    <span
                      class="ml-3 inline-flex items-center rounded-lg border border-border bg-surface px-4 py-2 text-sm font-medium text-text-light"
                    >
                      Next
                    </span>
                  )}
                </div>

                <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                  <div>
                    <p class="text-sm text-text-light">
                      Showing{' '}
                      <span class="font-medium text-text">{offset + 1}</span>
                      {' '}to{' '}
                      <span class="font-medium text-text">
                        {Math.min(offset + limit, results.total)}
                      </span>
                      {' '}of{' '}
                      <span class="font-medium text-text">{results.total}</span>
                      {' '}results
                    </p>
                  </div>

                  <div>
                    <nav class="inline-flex -space-x-px rounded-lg shadow-sm" aria-label="Pagination">
                      {hasPrevPage ? (
                        <a
                          href={buildPageUrl(offset - limit)}
                          class="inline-flex items-center rounded-l-lg border border-border bg-background px-2 py-2 text-sm font-medium text-text transition-colors hover:bg-surface"
                        >
                          <span class="sr-only">Previous</span>
                          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                              fill-rule="evenodd"
                              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            />
                          </svg>
                        </a>
                      ) : (
                        <span
                          class="inline-flex items-center rounded-l-lg border border-border bg-surface px-2 py-2 text-sm font-medium text-text-light"
                        >
                          <span class="sr-only">Previous</span>
                          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                              fill-rule="evenodd"
                              d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            />
                          </svg>
                        </span>
                      )}

                      <!-- Page Numbers -->
                      {searchPageNumbers.map((pageNum) => {
                        const pageOffset = (pageNum - 1) * limit;
                        const isActive = pageNum === currentPage;

                        return isActive ? (
                          <span
                            aria-current="page"
                            class="z-10 inline-flex items-center border border-primary bg-primary px-4 py-2 text-sm font-medium text-white"
                          >
                            {pageNum}
                          </span>
                        ) : (
                          <a
                            href={buildPageUrl(pageOffset)}
                            class="inline-flex items-center border border-border bg-background px-4 py-2 text-sm font-medium text-text transition-colors hover:bg-surface"
                          >
                            {pageNum}
                          </a>
                        );
                      })}

                      {hasNextPage ? (
                        <a
                          href={buildPageUrl(offset + limit)}
                          class="inline-flex items-center rounded-r-lg border border-border bg-background px-2 py-2 text-sm font-medium text-text transition-colors hover:bg-surface"
                        >
                          <span class="sr-only">Next</span>
                          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                              fill-rule="evenodd"
                              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                              clip-rule="evenodd"
                            />
                          </svg>
                        </a>
                      ) : (
                        <span
                          class="inline-flex items-center rounded-r-lg border border-border bg-surface px-2 py-2 text-sm font-medium text-text-light"
                        >
                          <span class="sr-only">Next</span>
                          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                              fill-rule="evenodd"
                              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                              clip-rule="evenodd"
                            />
                          </svg>
                        </span>
                      )}
                    </nav>
                  </div>
                </div>
              </nav>
            )}
          </>
        )}
      </main>
    </div>
  </div>
</BaseLayout>
