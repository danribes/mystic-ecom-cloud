---
/**
 * ReviewStats Component
 *
 * Displays course review statistics including:
 * - Average rating with stars
 * - Total review count
 * - Rating distribution (1-5 stars)
 * - Progress bars for each rating level
 *
 * Props:
 * - stats: CourseReviewStats object with rating data
 */

interface Props {
  stats: {
    courseId: string;
    totalReviews: number;
    approvedReviews: number;
    avgRating: number;
    ratingDistribution: {
      1: number;
      2: number;
      3: number;
      4: number;
      5: number;
    };
  };
}

const { stats } = Astro.props;

// Helper to format rating (e.g., 4.8 â†’ "4.8")
const formatRating = (rating: number): string => {
  return rating.toFixed(1);
};

// Helper to calculate percentage for progress bars
const getPercentage = (count: number, total: number): number => {
  if (total === 0) return 0;
  return Math.round((count / total) * 100);
};

// Helper to render star rating visually
const renderStars = (rating: number) => {
  const stars = [];
  const fullStars = Math.floor(rating);
  const hasHalfStar = rating % 1 >= 0.5;

  for (let i = 1; i <= 5; i++) {
    if (i <= fullStars) {
      stars.push({ type: 'full', id: i });
    } else if (i === fullStars + 1 && hasHalfStar) {
      stars.push({ type: 'half', id: i });
    } else {
      stars.push({ type: 'empty', id: i });
    }
  }
  return stars;
};

const stars = renderStars(stats.avgRating);
---

<div class="bg-white rounded-lg shadow-md p-6 mb-6">
  <h3 class="text-xl font-bold text-gray-900 mb-4">Course Rating</h3>

  {stats.approvedReviews === 0 ? (
    <!-- No reviews yet -->
    <div class="text-center py-8">
      <div class="flex justify-center mb-3">
        {Array.from({ length: 5 }).map(() => (
          <svg class="w-8 h-8 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <p class="text-gray-600 text-lg font-semibold">No reviews yet</p>
      <p class="text-gray-500 text-sm mt-1">Be the first to review this course!</p>
    </div>
  ) : (
    <!-- Has reviews -->
    <div>
      <!-- Average Rating Display -->
      <div class="flex items-center gap-4 mb-6 pb-6 border-b border-gray-200">
        <div class="text-center">
          <div class="text-5xl font-bold text-gray-900 mb-1">{formatRating(stats.avgRating)}</div>
          <div class="flex gap-1 mb-2">
            {stars.map((star) => (
              <svg
                class={`w-6 h-6 ${
                  star.type === 'full' ? 'text-yellow-400' :
                  star.type === 'half' ? 'text-yellow-400' :
                  'text-gray-300'
                }`}
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                {star.type === 'half' ? (
                  <>
                    <defs>
                      <linearGradient id={`half-star-${star.id}`}>
                        <stop offset="50%" stop-color="currentColor" />
                        <stop offset="50%" stop-color="rgb(209 213 219)" />
                      </linearGradient>
                    </defs>
                    <path
                      fill={`url(#half-star-${star.id})`}
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    />
                  </>
                ) : (
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                )}
              </svg>
            ))}
          </div>
          <p class="text-sm text-gray-600">{stats.approvedReviews} {stats.approvedReviews === 1 ? 'review' : 'reviews'}</p>
        </div>

        <!-- Rating Distribution -->
        <div class="flex-1">
          {[5, 4, 3, 2, 1].map((rating) => {
            const count = stats.ratingDistribution[rating as keyof typeof stats.ratingDistribution];
            const percentage = getPercentage(count, stats.approvedReviews);

            return (
              <div class="flex items-center gap-2 mb-2">
                <span class="text-sm font-medium text-gray-700 w-12">{rating} star{rating !== 1 ? 's' : ''}</span>
                <div class="flex-1 bg-gray-200 rounded-full h-2 overflow-hidden">
                  <div
                    class={`h-full rounded-full transition-all duration-300 ${
                      percentage > 0 ? 'bg-yellow-400' : 'bg-gray-200'
                    }`}
                    style={`width: ${percentage}%`}
                  ></div>
                </div>
                <span class="text-sm text-gray-600 w-12 text-right">{percentage}%</span>
              </div>
            );
          })}
        </div>
      </div>

      <!-- Additional Stats (if needed in future) -->
      {stats.totalReviews > stats.approvedReviews && (
        <div class="text-sm text-gray-500 italic">
          {stats.totalReviews - stats.approvedReviews} review{stats.totalReviews - stats.approvedReviews !== 1 ? 's' : ''} pending approval
        </div>
      )}
    </div>
  )}
</div>
